{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { 
        "maxLambdaSize": "15mb",
        "includeFiles": ["public/**/*"]
      }
    }
  ],
  "functions": {
    "pages/api/**/*.js":{
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".next"
}
